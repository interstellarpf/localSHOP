<section class="signup-sct">
  <form class="form-signup" action="/login" method="post">
    <h2> Log In </h2>
    <div>
      <label for="email-input"> Email </label>
      <input type="email" name="email" id="email-input" placeholder="email@email.com">
    </div>

    <div>
      <label for="password-input"> Password </label>
      <input type="password" name="password" id="password-input" placeholder="********">
    </div>

    <button> Log In </button>
    <p>
      Don't have an account?
      <a href="/signup">
        Create an account.
      </a>
    </p>
    {{#if errorMessage}}
    <p class="error-message">
      {{ errorMessage }}
    </p>
    {{/if}}
  </form>


</section>