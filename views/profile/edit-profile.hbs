<h2> Edit Profile </h2>

{{#if errorMessage}}
<p class="error-message">
    {{ errorMessage }}
</p>
{{/if}}

<form action="/profile/{{user._id}}/edit" method="post">
    <div>
        <label for="name-input"> Name </label>
        <input type="text" name="name" id="name-input" value="{{user.name}}" placeholder="Name">
    </div>

    <div>
        <label for="email-input"> Email </label>
        <input type="email" name="email" id="email-input" value="{{user.email}}" placeholder="Email@email.com">
    </div>

    <button> Submit changes </button>
</form>

<p>
    <a href="/profile/{{user._id}}">
        Go back
    </a>
</p>