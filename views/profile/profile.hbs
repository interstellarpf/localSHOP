<section class='profile-section'>

    <div class='personal-info'>
        <div class="foto-edit">
            <div class='profile-img'>
                <img src="{{user.profilePic}}">
            </div>
            <a href="/profile/{{user._id}}/edit">EDIT PROFILE</a>
        </div>
        <div class='profile-info'>
            <h3>{{user.name}} </h3>
            <p>{{user.email}} </p>
        </div>

    </div>

    {{!-- favouriteBy --}}

    {{#if business}}
    <div class="my-business-title">
        <h3><i class="fas fa-business-time"></i> My business</h3>
    </div>
    {{/if}}
    <div class="all-my-business">

        {{#each business}}
        <div class="my-business">
            <a href="business/details/{{id}}">
                <div>
                    <p>{{name}} <i class="fas fa-heart" style="color: tomato;"></i>  {{favouriteBy.length}}</p>
                </div>
                <div class='img-business-profile'>
                    <img src="{{image_url}}">
                </div>
            </a>
        </div>
        {{/each}}

    </div>

    {{#if user.favouriteBusiness}}
    <div class="my-business-title">
        <h3><i class="fas fa-heart"></i> My favourite business</h3>
    </div>
    {{/if}}
    <div class="all-my-business">
        {{#each user.favouriteBusiness}}

        <div class="my-business">
            <a href="business/details/{{id}}">
                <div>
                    <p>{{name}}</p>
                </div>

                <div class='img-business-profile'>
                    <img src="{{image_url}}">


                </div>
            </a>
        </div>
        {{/each}}
    </div>

    {{#if review}}
    <div class='my-business-title'>
        <h3><i class="fas fa-comment-alt"></i> My reviews</h3>
    </div>
    {{/if}}
    <div class="container-reviews">
        {{#each review}}
        <div class='review-profile'>

            <h5>{{reviewTitle}}</h5>
            <p>{{comment}}</p>
            <p>Reviewed to: <a href='/business/details/{{commentTo._id}}'>{{commentTo.name}}</a></p>

            <form action='/profile/delete/review/{{id}}' method='post'>
                <button type='submit'><i class="fas fa-trash-alt"></i></button>
            </form>
        </div>
        {{/each}}
    </div>
</section>