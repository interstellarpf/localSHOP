<section class="business-container">
    {{#if errorMessage}}
    <p class="error-message">
        {{ errorMessage }}
    </p>
    {{/if}}

    <div class='form-search'>
        <div>
            <h1>Search your next localSHOP! </h1>
        </div>
        <div class='inputs-search'>
            <div class='city-search'>
                <form action="/business" method="post">

                    <select name="city" id="city-input">
                        {{#if business}}
                        {{#each business}}
                        <option value={{this}}>{{this}}</option>
                        {{/each}}
                        {{/if}}
                        {{#if businessUnique}}
                        {{#each businessUnique}}
                        <option value={{this}}>{{this}}</option>
                        {{/each}}
                        {{/if}}

                    </select>
            </div>
            <div class='typeofbusiness-search'>

                <select name="type" id="type-input">
                    <option value="Bookstore">Bookstore</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Coffee shop">Coffee shop</option>
                    <option value="Fruits and Vegetables">Fruits and Vegetables</option>
                    <option value="Hairdress">Hairdress</option>
                    <option value="Restaurant">Restaurant</option>
                    <option value="Shoe store">Shoes</option>
                    <option value="Toy store">Toys</option>
                </select>
            </div>
            <button class="search-btn" type="submit">Search</button>
            </form>
        </div>
    </div>
</section>

<div class='container-card'>
    {{#each bizz}}
    <div class='card'>

        <div class='img-card'>
            <a href="/business/details/{{id}}">
                <img src="{{image_url}}" alt="image">
            </a>
        </div>
        <div class='info-card'>
            
            <span class="name-fav"><h4>{{name}}</h4><form action='/business/favourite/{{id}}' method='post'>
                
                <button class="favourite-btn" type="submit"><i class="far fa-heart"></i></button>
                
                {{!-- <button class="favourite-btn" type="submit"><i class="far fa-heart"></i></button> --}}

            </form> </span>
            <p>{{city}}</p>
            <p>{{about}}</p>
        </div>
    </div>
    {{/each}}
</div>
</section>